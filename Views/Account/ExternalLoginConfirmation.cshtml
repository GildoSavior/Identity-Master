@model ExternalLoginConfirmationViewModel

<h1 class ="text-info mb-3">
    Register
</h1>

<h3>Associate your @ViewData["ProviderDiplayName"] account</h3>


<form 
    asp-controller="Account" 
    asp-action="ExternalLoginConfirmation"  
    asp-route-returnurl="@ViewData["ReturnUrl"]" 
    method="Post" 
    role="form" 
>
    <h4>Associate Form</h4>
    <hr>
    <div asp-validation-summary="All" class = "text-danger">
    </div>

    <p>
        You've successfull authenticated whith 
        <strong>@ViewData["ProviderDiplayName"]</strong>
        Please enter a user name for this site below and click Register button to finish loggin in.
    </p>

    <div class="form-group mt-4">
        <label asp-for="Email" class="col-md-2"></label>
        <div class="col-md-5">
            <input asp-for="Email" class="form-control" />
            <span asp-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group mt-4">
        <label asp-for="Name" class="col-md-2"></label>
        <div class="col-md-5">
            <input asp-for="Name" class="form-control"/>
            <span asp-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group mt-4">
        <div class="col-md-2">
            <button type="submit" class="btn btn-success">Register</button>
        </div>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
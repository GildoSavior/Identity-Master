@model RegisterViewModel

<h1 class ="text-info mb-3">
    Register
</h1>


<form 
    asp-controller="Account" 
    asp-action="Register"  
    asp-route-returnurl="@ViewData["ReturnUrl"]" 
    method="Post" 
    role="form" 
>
    <h4>Create a new account</h4>
    <hr>
    <div asp-validation-summary="All" class = "text-danger">
    </div>

    <div class="form-group mt-4">
        <label asp-for="Email" class="col-md-2"></label>
        <div class="col-md-5">
            <input asp-for="Email" class="form-control" />
            <span asp-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group mt-4">
        <label asp-for="Name" class="col-md-2"></label>
        <div class="col-md-5">
            <input asp-for="Name" class="form-control"/>
            <span asp-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group mt-4">
        <label asp-for="Password" class="col-md-2"></label>
        <div class="col-md-5">
            <input asp-for="Password" class="form-control" />
            <span asp-for="Password" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group mt-4">
        <label asp-for="ConfirmPassword" class="col-md-2"></label>
        <div class="col-md-5">
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>

     <div class="form-group mt-4">
        <label asp-for="RoleSelected" class="col-md-2">Select Role</label>
        <div class="col-md-5">
            <select asp-for="RoleSelected"  class="form-control">
                <option value="Admin">Admin</option>
                <option value="User">User</option>
            </select>
        </div>
    </div>

    <div class="form-group mt-4">
        <div class="col-md-2">
            <button type="submit" class="btn btn-success">Register</button>
        </div>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
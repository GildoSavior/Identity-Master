@model ResetPasswordViewModel
<h1 class ="text-info mb-3">
    Reset Password
</h1>

<form 
    asp-controller="Account" 
    asp-action="ResetPassword"  
    asp-route-returnurl="@ViewData["ReturnUrl"]" 
    method="Post" 
    role="form" 
>
    <h4>Reset your password</h4>
    <hr>
    <div asp-validation-summary="All" class = "text-danger">
    </div>

    <input asp-for="Code" hidden />
    <div class="form-group mt-4">
        <label asp-for="Email" class="col-md-2"></label>
        <div class="col-md-5">
            <input asp-for="Email" class="form-control" />
            <span asp-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group mt-4">
        <label asp-for="Password" class="col-md-2"></label>
        <div class="col-md-5">
            <input asp-for="Password" class="form-control" />
            <span asp-for="Password" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group mt-4">
        <label asp-for="ConfirmPassword" class="col-md-2"></label>
        <div class="col-md-5">
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group mt-4">
        <div asp-for="Password" class="col-md-2">
            <button type="submit" class="btn btn-success">Reset</button>
        </div>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}